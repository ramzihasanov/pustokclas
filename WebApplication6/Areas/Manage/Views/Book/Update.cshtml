@model Book

<div class="container-fluid">
    <h1>Update Book</h1>
</div>

<div class="container-fluid">

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <input asp-for="@Model.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description">Description</label>
            <input asp-for="@Model.Description" type=" text" class="form-control">
            <span asp-validation-for="@Model.Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Code">Code</label>
            <input asp-for="@Model.Code" type="text" class="form-control">
            <span asp-validation-for="@Model.Code"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.SalePrice">SalePrice</label>
            <input asp-for="@Model.SalePrice" type="text" class="form-control">
            <span asp-validation-for="@Model.SalePrice"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DisPrice">Discounted Price</label>
            <input asp-for="@Model.DisPrice" class="form-control">
            <span asp-validation-for="@Model.DisPrice"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CostPrice">CostPrice</label>
            <input asp-for="@Model.CostPrice" class="form-control">
            <span asp-validation-for="@Model.CostPrice"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.AuthorId">Author</label>
            <select asp-for="@Model.AuthorId" class="form-select" aria-label="Default select example">
                @foreach (var item in ViewBag.Authors)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span asp-validation-for="@Model.AuthorId"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.GenreId">Genre</label>
            <select asp-for="@Model.GenreId" class="form-select" aria-label="Default select example">
                @foreach (var item in ViewBag.Genres)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span asp-validation-for="@Model.GenreId"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.TagIds">Tag</label>
            <select asp-for="@Model.TagIds" class="form-select" aria-label="Default select example">
                @foreach (var item in ViewBag.Tags)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span asp-validation-for="@Model.TagIds"></span>
        </div>
        <div class="row col-12 my-4 align-items-center flex-column" style="padding:0px;">
            <div class="col-md-12 d-flex align-items-center justify-content-center mt-4">
                <label asp-for="FaceImage">MainImage</label>
                <input class="form-control  mx-3" asp-for="FaceImage" />
                <div class="d-flex align-items-center flex-column">
                    <img style="width:100px" src="~/upload/@Model.BookImages?.Where(x => x.IsPoster == true).FirstOrDefault()?.ImageUrl" class="shadow" />
                    <input type="hidden" asp-for="FaceImage" style="width:50px;" />
                </div>
                <span asp-validation-for="FaceImage" style="color:red"></span>
            </div>
            <div class="col-md-12 d-flex align-items-center justify-content-center mt-4">
                <label asp-for="BackViewImg">HoverImage</label>
                <input class="form-control  mx-3" asp-for="BackViewImg" />
                <div class="d-flex align-items-center flex-column">
                    <img style="width:100px" src="~/upload/@Model.BookImages?.Where(x => x.IsPoster == false).FirstOrDefault()?.ImageUrl" class="shadow"/>
                    <input type="hidden" asp-for="BackViewImg" style="width:50px;" />
                </div>
                <span asp-validation-for="BackViewImg" style="color:red"></span>
            </div>
            <div class="col-md-12 d-flex align-items-start justify-content-center flex-column mt-4">
                <label asp-for="BookDetailImgs">SlideImages</label>
                <input class="form-control ml-3" asp-for="BookDetailImgs" />
                <div class="d-flex align-items-center  mt-4 " style="flex-wrap:wrap;">
                    @foreach (var item in Model.BookImages.Where(x => x.IsPoster == null))
                    {
                        <div style="position:relative;display:flex; flex-direction:column; align-items:center">
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger remove-btn" style="font-size:15px;top:10px !important;cursor:pointer">x</span>
                            <img style="width:100px;margin-left:25px;margin-top:10px" src="~/upload/@item?.ImageUrl" class="shadow" />
                            <input value="@item.Id" type="hidden" asp-for="BookDetailImgs" style="width:50px;" />
                        </div>
                    }
                </div>
                <span asp-validation-for="BookDetailImgs" style="color:red"></span>
            </div>
        </div>

        <div class="form-check">
            <input asp-for="@Model.IsAvailable" class="form-check-input" type="checkbox" checked>
            <label asp-for="@Model.IsAvailable" class="form-check-label" for="flexCheckChecked">
                IsAvailable
            </label>
        </div>
        <button type="submit" class="btn btn-primary">UPDATE</button>
    </form>

</div>
