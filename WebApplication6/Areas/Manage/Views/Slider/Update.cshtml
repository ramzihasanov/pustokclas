@model Slider
<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Create a silider</h1>
</div>
<div class="container-fluid">
    <form method="post" class="row">
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Title</label>
            <input asp-for="Title" type="text" class="form-control">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Desc</label>
            <input asp-for="Descirption" type="text" class="form-control">
            <span asp-validation-for="Descirption"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">ImgUrl</label>
            <input asp-for="ImageUrl" type="text" class="form-control">
            <span asp-validation-for="ImageUrl" style=""></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">RedirUrl</label>
            <input asp-for="RedirectorUrl" type="text" class="form-control">
            <span asp-validation-for="RedirectorUrl" style=""></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">reDirUrlText</label>
            <input asp-for="RedirectorUrlText" type="text" class="form-control">
            <span asp-validation-for="RedirectorUrlText" style=""></span>
        </div>
        <button style="width: 100px" type="submit" class="btn btn-primary">Create</button>
    </form>
</div>