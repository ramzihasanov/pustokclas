@model List<Slider>
@{
    int counter = 0;
}

<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Slider</h1>
    <div><a asp-action="create" asp-controller="service" class="btn btn-primary">Create</a></div>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">ImageUrl</th>
                <th scope="col">RedirectorUrl</th>
                <th scope="col">RedirectorUrlText</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Title</td>
                    <td>@slider.Descirption</td>
                    <td>@slider.ImageUrl</td>
                    <th>@slider.RedirectorUrl</th>
                    <th>@slider.RedirectorUrlText</th>
                        <a asp-controller="slider" asp-action="update" asp-route-id="@slider.Id" class="btn btn-success">Update</a>
                        <a asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                    
                </tr>
            }

        </tbody>
    </table>
</div>