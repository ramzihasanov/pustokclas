﻿@using WebApplication6.ViewModels;
@model MemberRegisterViewModel

<div class="site-wrapper" id="top">

	<section class="breadcrumb-section">
		<h2 class="sr-only">Site Breadcrumb</h2>
		<div class="container">
			<div class="breadcrumb-contents">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Home</a></li>
						<li class="breadcrumb-item active">Login</li>
					</ol>
				</nav>
			</div>
		</div>
	</section>
	<!--=============================================
	=            Login Register page content         =
	=============================================-->
	<main class="page-section inner-page-sec-padding-bottom">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
					<!-- Login Form s-->
					<form method="post">
						<div class="login-form">
							<h4 class="login-title">New Customer</h4>
							<p><span class="font-weight-bold">I am a new customer</span></p>
							<div class="row">
								<div class="col-md-6 col-12 mb--15">
									<label>FullName</label>
									<input asp-for="Fullname" class="mb-0 form-control"
										   placeholder="Enter your full name">
									<span asp-validation-for="Fullname"></span>
								</div>
								<div class="col-md-6 col-12 mb--15">
									<label>Username</label>
									<input asp-for="Username" class="mb-0 form-control"
										   placeholder="Enter your Username">
									<span asp-validation-for="Username"></span>
								</div>
								<div class="col-md-6 col-12 mb--15">
									<label>Email</label>
									<input asp-for="Email" class="mb-0 form-control"
										   placeholder="Enter your email">
									<span asp-validation-for="Email"></span>
								</div>
								<div class="col-md-6 col-12 mb--15">
									<label>BirthDate</label>
									<input asp-for="Birthday" class="mb-0 form-control"
										   placeholder="Enter your Birthdate">
									<span asp-validation-for="Birthday"></span>
								</div>
								<div class="col-md-6 col-12 mb--15">
									<label>Password</label>
									<input asp-for="Password" class="mb-0 form-control"
										   placeholder="Enter your Password">
									<span asp-validation-for="Password"></span>
								</div>
								<div class="col-md-6 col-12 mb--15">
									<label>Confirm Password</label>
									<input asp-for="ConfirmPassword" class="mb-0 form-control"
										   placeholder="Enter your Confirm Password">
									<span asp-validation-for="ConfirmPassword"></span>
								</div>

								<div class="col-md-12">
									<button type="submit" href="#" class="btn btn-outlined">Register</button>
								</div>
							</div>
						</div>
					</form>
				</div>

			</div>
		</div>
	</main>
</div>
